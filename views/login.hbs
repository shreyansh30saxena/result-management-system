	<body id="adminbg">
	

       <section class="mid">
			<div class="container" align="center">
                    <div class="col-md-6">
                            <form class="shadow row g-3 forml"  action="/auth/login" method="POST">
                                <h1 style="color:black">Student Login</h1>
                                <div class="col-12">
                                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email">
                                </div>
                                <div class="col-12">
                                    <input type="password" name="password" class="form-control password" id="inputAddress" placeholder="Password">
                                </div>
                                {{#if message}}
                                    <h4 class="alert alert-danger mt-4">{{message}}</h4>
                                {{/if}}
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary submit"  id="sbmtbtn">Submit</button>
                                </div>
                            </form>
                    </div>
                </div>
		</section>
	</body>
